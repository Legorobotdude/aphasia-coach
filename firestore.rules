rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User document rules
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Rule for user-specific onboarding answers subcollection
    match /users/{userId}/onboardingAnswers/{answerId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Topics collection rules
    match /topics/{userId}/{topicId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Sessions collection rules
    match /sessions/{userId}/{sessionId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Utterances collection rules
    match /utterances/{sessionId}/{uttId} {
      allow read, write: if isSessionOwner(sessionId);
    }
    
    // Helper function to check session ownership
    function isSessionOwner(sessionId) {
      let sessionPath = /databases/$(database)/documents/sessions/$(request.auth.uid)/$(sessionId);
      return exists(sessionPath);
    }
  }
} 